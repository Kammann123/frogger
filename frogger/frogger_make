CC = gcc
OPTIONS = -Wall -lpthread `pkg-config --libs allegro-5.0` `pkg-config --libs allegro_acodec-5.0` `pkg-config --libs\
allegro_audio-5.0` `pkg-config --libs allegro_color-5.0` `pkg-config --libs allegro_dialog-5.0` `pkg-config --libs\
 allegro_font-5.0` `pkg-config --libs allegro_image-5.0` `pkg-config --libs allegro_main-5.0` `pkg-config --libs\
 allegro_memfile-5.0` `pkg-config --libs allegro_physfs-5.0` `pkg-config --libs allegro_primitives-5.0` `pkg-config --libs\
 allegro_ttf-5.0`

OBJS = logic/frogger/frogger_kernel.o gui/gui_types.o gui/gui_init.o gui/gui_animation/gui_animation.o\
 gui/gui_timer/gui_timer.o gui/gui_input/gui_input.o gui/gui_events/gui_events.o\
 gui/gui_files/gui_files.o gui/allegro/allegro_init.o gui/allegro/allegro_input/allegro_input.o\
 gui/allegro/frogger/game/allegro_frogger_game.o gui/allegro/frogger/mainmenu/allegro_frogger_mainmenu.o\
 gui/allegro/frogger/lostscreen/allegro_frogger_lostscreen.o gui/allegro/frogger/pausemenu/allegro_frogger_pausemenu.o\
 gui/allegro/frogger/changescreen/allegro_frogger_changescreen.o gui/frogger/frogger_game/frogger_game.o\
 gui/frogger/frogger_changescreen/frogger_changescreen.o gui/frogger/frogger_mainmenu/frogger_mainmenu.o\
 gui/frogger/frogger_pausemenu/frogger_pausemenu.o gui/frogger/frogger_lostscreen/frogger_lostscreen.o

MAKES = ${OBJS:%.o=%_make}
SRC = main.c
HEADERS = settings.h

frogger: ${OBJS} ${HEADERS}
	${CC} ${SRC} ${OBJS} -o frogger ${OPTIONS}
	
{OBJS}:
	make -f ${MAKES}

clean:
	rm *.o
